{
	"name": "root",
	"private": true,
	"type": "module",
	"version": "0.0.0",
	"packageManager": "pnpm@10.17.0",
	"description": "Root package.json file for all time-sync libraries",
	"keywords": ["react", "typescript", "utility", "ui"],
	"license": "AGPL-3.0-only",
	"repository": {
		"type": "git",
		"url": "https://www.github.com/buenos-nachos/time-sync.git"
	},
	"scripts": {
		"build": "tsc",
		"check:all": "pnpm check:lint && pnpm check:types",
		"check:lint": "biome check --error-on-warnings .",
		"check:types": "tsc --noEmit",
		"format": "biome format --write .",
		"test": "vitest",
		"test:watch": "vitest watch"
	},
	"homepage": "https://www.github.com/buenos-nachos/time-sync",
	"author": "Michael Smith <contact@nachos.dev> (https://www.nachos.dev)",
	"bugs": {
		"url": "https://www.github.com/buenos-nachos/time-sync/issues"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"@types/node": "^24.10.0",
		"happy-dom": "20.0.10",
		"typescript": "5.9.3",
		"vitest": "4.0.8"
	}
}
